<h1>BURGER CHEF!!!!</h1>
<br>
<br>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 col-lg-6">
            <h2>Burgers to try</h2>
            <ul class="burger-list">
                {{#each burger}}
                    {{#unless devoured}}
                        <li>
                            {{burger_name}}
                            <button class="devour" data-id="{{this.id}}" data-devoured="{{devoured}}">
                                Devour It!
                            </button>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6 col-lg-6">
            <h2>Were these yummy??</h2>
            <ul class="burger-list">
                {{#each burger}}
                    {{#if devoured}}
                        <li>
                            {{burger_name}}
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <br>
    <br>
    <h2>Add a Burger</h2>
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <form class="create-form" method="POST" action="/burger">
                <div class="form-group">
                    <label for="burger">Burger Name:</label>
                    <input type="text" id="burger" name="burger">
                </div>
                <div class="form-group">
                </div>
                <button type="submit">Cook A Burger</button>
            </form>
        </div>
    </div>
</div>